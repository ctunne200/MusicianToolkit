<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/MySheetsButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/title_activity_my_sheets" />

        <Button
            android:id="@+id/MusicNewsButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/title_activity_music_news" />

        <Button
            android:id="@+id/NearbyStoresButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/title_activity_nearby_stores" />

        <Button
            android:id="@+id/HelpButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_column="4"
            android:layout_row="1"
            android:text="@string/title_activity_help" />

    </GridLayout>

    <TextView
        android:text="@string/main_welcome"
        android:textSize="@dimen/main_welcometext_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>